generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  rg           String?
  cpf          String?  @unique
  cellphone    String?
  refreshToken String?
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  addresses     Address[]
  boughtTickets TicketSale[] @relation("UserPurchases")
}

model Ticket {
  id          String   @id @default(uuid())
  title       String
  description String
  eventDate   DateTime
  imageUrl    String?
  quantity    Int
  price       Float
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sales TicketSale[]
}

model TicketSale {
  id           String   @id @default(uuid())
  customerId   String
  ticketId     String
  used         Boolean  @default(false)
  pdfUrl       String?
  qrCodeUrl    String?
  qrCodeBase64 String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  customer User   @relation("UserPurchases", fields: [customerId], references: [id])
  ticket   Ticket @relation(fields: [ticketId], references: [id])
}

model Address {
  id           String @id @default(uuid())
  street       String
  number       Int
  neighborhood String
  city         String
  state        String
  zipCode      String
  userId       String

  user User @relation(fields: [userId], references: [id])
}
