generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SELLER
  CUSTOMER
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  password     String?
  rg           String?
  cpf          String?  @unique
  cellphone    String?
  refreshToken String?
  role         Role     @default(CUSTOMER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  addresses     Address[]
  soldTickets   TicketSale[] @relation("SellerSales")
  boughtTickets TicketSale[] @relation("CustomerPurchases")
}

model Address {
  id           Int    @id @default(autoincrement())
  street       String
  number       Int
  neighborhood String
  city         String
  state        String
  zipCode      String
  userId       Int

  user User @relation(fields: [userId], references: [id])
}

model Ticket {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  eventDate   DateTime
  imageUrl    String?
  quantity    Int
  price       Float
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sales TicketSale[]
}

model TicketSale {
  id           Int      @id @default(autoincrement())
  sellerId     Int
  customerId   Int
  ticketId     Int
  used         Boolean  @default(false)
  pdfUrl       String?
  qrCodeUrl    String?
  qrCodeBase64 String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  seller   User   @relation("SellerSales", fields: [sellerId], references: [id])
  customer User   @relation("CustomerPurchases", fields: [customerId], references: [id])
  ticket   Ticket @relation(fields: [ticketId], references: [id])
}
