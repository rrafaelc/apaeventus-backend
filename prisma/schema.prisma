generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SELLER
  CUSTOMER
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  password     String?
  rg           String?
  cpf          String?  @unique
  refreshToken String?
  role         Role     @default(CUSTOMER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  soldTickets   TicketSale[] @relation("SellerSales")
  boughtTickets TicketSale[] @relation("CustomerPurchases")
}

model Ticket {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String?
  expiresAt   DateTime
  quantity    Int
  price       Float
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sales TicketSale[]
}

model TicketSale {
  id         Int      @id @default(autoincrement())
  sellerId   Int
  customerId Int
  ticketId   Int
  used       Boolean  @default(false)
  createdAt  DateTime @default(now())

  seller   User   @relation("SellerSales", fields: [sellerId], references: [id])
  customer User   @relation("CustomerPurchases", fields: [customerId], references: [id])
  ticket   Ticket @relation(fields: [ticketId], references: [id])

  CustomerTicketPDF CustomerTicketPDF?
}

model CustomerTicketPDF {
  id           Int      @id @default(autoincrement())
  ticketSaleId Int
  pdfUrl       String
  createdAt    DateTime @default(now())

  ticketSale TicketSale @relation(fields: [ticketSaleId], references: [id])

  @@unique([ticketSaleId])
}
